<h1>Title: <%= @post.title %> </h1>
<p><strong>Camera:</strong> Used:<%= @post.camera %></p>
<p><strong>Description:</strong> <%= @post.desc %></p>

<!--added in -->
<%@post.comments.each do |comment| %>

    <div><%=comment.author %></div>
    <div><%=comment.comment %></div>
<% end %>


<%= link_to "Back to posts", posts_path %><br>
<%= link_to "Edit", edit_post_path(@post) %><br>

<%= link_to "Delete this Post!", :post, method: :delete, data: { confirm: 'Are you sure you want to delete it?' } %>

<!--Added in -->
<h2>New Comment</h2>

<%= form_for(@comment ,:url => {:action => :new_comment, :controller => :posts} ) do |f| %>

	 <!--hidden field -->
	 <%= hidden_field_tag :post_id, @post.id %>


    <div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>